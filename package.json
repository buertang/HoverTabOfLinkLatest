    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
